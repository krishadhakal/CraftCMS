{% import '_macros/helpers' as helpers %}

{#---------- Parameters ----------#}
{% set theme = helpers.getOption(theme ?? null, ["light", "dark"]) %}
{% set align = helpers.getOption(align ?? null, ["left", "center"]) %}
{% set iconSvg = iconSvg ?? null %}
{% set heading = heading ?? null %}
{% set copy = copy ?? null %}

{#---------- Classes ----------#}
{% set baseClass = "el-CardIconInfo" %}
{% set variants = variants ?? [] %}
{% set classes = helpers.generateClasses(baseClass, variants, [theme, 'align'~align|capitalize], []) %}

{#---------- Output ----------#}
{% if heading|length %}
<div class="{{ classes }}">
	{% if iconSvg|length %}
		<div class="{{ baseClass }}__icon">
			{{ iconSvg }}
		</div>
	{% endif %}
	<div class="{{ baseClass }}__content">
		<h4 class="{{ baseClass }}__heading">
			{{ heading }}
		</h4>
		{% if copy %}
			<div class="{{ baseClass }}__copy">
				{{ copy }}
			</div>
		{% endif %}
	</div>
</div>
{% endif %}