{% import '_macros/helpers' as helpers %}

{#---------- Parameters ----------#}
{% set theme = helpers.getOption(theme ?? null, ["dark", "light"]) %}
{% set items = items ?? [] %}

{#---------- Classes ----------#}
{% set baseClass = "mol-ListingFaq" %}
{% set variants = variants ?? [] %}
{% set classes = helpers.generateClasses(baseClass, variants, [theme], []) %}

{#---------- Output ----------#}
<div class="{{ classes }}">
	{% if intro|trim|length %}
		{{ intro }}
	{% endif %}
	<div class="grid-container">
		<div class="row">
			<div class="column xsmall-12 medium-10 offset-medium-1">
				<div class="{{ baseClass }}__items">
					{% for item in items %}
						<div class="{{ baseClass }}__item">
							{{ item }}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
